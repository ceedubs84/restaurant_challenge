<div class="container-fluid">
  <div class="page-header">
    <h3>MENU</h3>
  </div>
  <div class="row">
    <% @menu_items.each do |menu_item| %>
      <div class="col-sm-12 col-md-6 col-lg-4">
        <div class="thumbnail">
          
          <div class="caption">
            <h3><%= menu_item.name %></h3>
            <p><%= menu_item.description %></p>
            <p><%= number_to_currency(menu_item.price) %></p>
            <% if current_user.admin %>
            <div>
              <a href="/menu_items/<%= menu_item.id %>" class="btn btn-primary" role="button">View Item</a>
              <a href="/menu_items/<%= menu_item.id %>/edit" class="btn btn-default" role="button">Edit Item</a>
            </div>
            <% end %>
            <% if current_user %>
              <div class="container">
                <div class="btn-group">
                  <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="glyphicon glyphicon-shopping-cart"></span>Add
                  </button>
                  <ul class="dropdown-menu">
                    <form action="/carted_menu_items" method="post">
                      <li><input type="number" name="quantity" placeholder="Enter quantity">Quantity</li>
                      <input type="hidden" name="menu_item_id" value="<%= menu_item.id %>">
                      <li role="separator" class="divider"></li>
                      <li><input type="submit" class="btn btn-success">Add to Cart</li>
                    </form>
                  </ul>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-6 col-lg-4">
      <a href="/menu_items/new"><span class="btn btn-success">+ New Item</span></a>
    </div>
  </div>
</div>
