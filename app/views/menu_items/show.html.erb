<div class="container-fluid">
  <div class="row">
    <div class="col-sm-4 col-md-offset-4">
      <div class="thumbnail">
        <img src="<%= @menu_item.avatar_url %>" id='avatar-show'>
        <div class="caption">
          <h3><%= @menu_item.name %></h3>
          <p><em><%= @menu_item.description %></em></p>
          <h5>
              Categories:
              <% @menu_item.categories.each do |category| %>
                <a href="/menu_items?category_name=<%= category.name %>"><%= category.name %></a>
              <% end %>
            </h5>
          <div><%= number_to_currency(@menu_item.price) %></div>
          <% if current_user.admin %>
            <div>
              <%= link_to "Edit", "/menu_items/#{@menu_item.id}/edit", class: "btn btn-success" %>
              <%= link_to "Delete?", "/menu_items/#{@menu_item.id}", { method: :delete, class: "btn btn-danger" }%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-4 col-md-offset-4">
      <a href="/menu_items" class="btn btn-default" role="button"><span class="fa fa-chevron-left"> Back</span></a>
    </div>
  </div>
</div>