<div class="page-header" id="header">
  <h1>Login</h1>
</div>
<div class="row">
  <div class="col-sm-8 col-sm-offset-4">
    <div class="container">
      <%= form_tag '/login', method: :post do %>
        <div>
          <%= label_tag :email %>
          <%= text_field_tag :email %>
          <%= label_tag :password %>
          <%= password_field_tag :password %>
        </div>
        <div>
          <%= submit_tag "Log In", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>